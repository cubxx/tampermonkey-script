{
  "type": "module",
  "scripts": {
    "format": "prettier --write 'src/**/*' 'types/**/*' 'scripts/**/*'",
    "type-check": "tsc --noEmit",
    "build": "bun scripts/install.js"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/wicg-file-system-access": "^2023.10.6",
    "csstype": "^3.1.3",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.3.3",
    "typed-query-selector": "^2.12.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "jsdocTagsOrder": "{\"template\": 24.5}",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
